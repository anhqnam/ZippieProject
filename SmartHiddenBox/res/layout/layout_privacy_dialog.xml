<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pri_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_addfiles"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/title_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="@string/title_privacy"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title_privacy"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pri_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/content_privacy"
            style="@style/TextSmallLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/bg_text"
            android:padding="20dp"
            android:text="@string/content_privacy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/btn_cancel"
            style="@style/KeyButtonDialogPrivacyCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="@dimen/padding_button_privacy"
            android:text="@string/refuse_privacy"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/KeyButtonDialogPrivacyOk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="@dimen/padding_button_privacy"
            android:text="@string/accept_privacy"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

</LinearLayout>