<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Messagefetch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fetch" />

            <Button
                android:id="@+id/MessagefetchThread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FetchThread" />

            <Button
                android:id="@+id/WaittingConfirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waitting For Confirmation" />

            <Button
                android:id="@+id/MessageModify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modify" />

            <Button
                android:id="@+id/MessageRegisterListener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RegisterListener" />

            <Button
                android:id="@+id/MessageRemoveid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RemoveWithID" />

            <Button
                android:id="@+id/MessageRemoveMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RemoveWithMessage" />

            <Button
                android:id="@+id/MessageRemoveThread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RemoveWithThread" />

            <Button
                android:id="@+id/MessagesmsFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMS Free" />

            <Button
                android:id="@+id/MessagesmsPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMS Paid" />

            <Button
                android:id="@+id/MessageunregisterListener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UnregisterListener" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvMessageResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>