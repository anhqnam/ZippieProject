<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/registration_btn_size"
    android:background="@color/row_primary"
    android:orientation="horizontal"    
    android:gravity="center" >
    
    <ImageView 
        android:id="@+id/back_btn_icon"
        android:layout_height="@dimen/registration_icon_size"
        android:layout_width="@dimen/registration_icon_size"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        android:src="@drawable/back"
        /> 
	<unique.packagename.widget.MainTextView 
	    android:id="@+id/back_btn_text"
		style="@style/registration_title"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/registration_btn_size"
	    android:layout_gravity="center_vertical"
	    android:gravity="center_vertical"
		android:layout_marginLeft="10dp"
		android:textColor="@color/text_row_primary"
	    android:text="@string/registration_back"
	    />
</LinearLayout>