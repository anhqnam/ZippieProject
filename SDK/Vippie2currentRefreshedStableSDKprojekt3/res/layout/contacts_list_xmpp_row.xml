<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/contacts_row"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" >

	<RelativeLayout
		android:layout_width="@dimen/contacts_avatar_container_width"
		android:layout_height="@dimen/contacts_avatar_container_height">

		<include 
		    layout="@layout/avatar"/>

	</RelativeLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_weight="1" >

		<unique.packagename.widget.MainTextView android:id="@+id/contacts_row_name"
			style="@style/contacts_row_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
		/>

		<unique.packagename.widget.MainTextView android:id="@+id/contacts_row_presence_status"
			style="@style/contacts_row_number"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
		/>
	</LinearLayout>
</LinearLayout>
