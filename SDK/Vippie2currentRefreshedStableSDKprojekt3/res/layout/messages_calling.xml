<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messages_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/transparent_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/custom_activity_title_messages"
        android:visibility="gone" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/contact_input_panel"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/messages_message_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <unique.packagename.widget.MainTextView
            android:id="@+id/messages_message"
            style="@style/list_message"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@drawable/messages_list_msg"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>

    <FrameLayout
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1">

        <ListView
            android:id="@id/android:list"
            style="@style/calllog_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/transparent"
            android:drawSelectorOnTop="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:stackFromBottom="false"
            android:transcriptMode="alwaysScroll" />
    </FrameLayout>

    <include
        android:id="@+id/messages_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/messages_msg_compose_panel" />

</LinearLayout>