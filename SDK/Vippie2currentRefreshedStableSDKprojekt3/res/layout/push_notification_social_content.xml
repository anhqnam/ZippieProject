<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/push_social_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="visible" >

        <unique.packagename.widget.MainTextView
            android:id="@+id/push_social_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/push_notification_social_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <unique.packagename.widget.MainTextView
            android:id="@+id/push_social_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/platform_android"
            android:gravity="right"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/push_social_info_actions"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/push_social_info"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="14" >

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/push_social_vippie_call"
            android:layout_width="@dimen/options_dark_icon_size"
            android:layout_height="@dimen/options_dark_icon_size"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/contacts_free_actions_call" />

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/push_social_vippie_video_call"
            android:layout_width="@dimen/options_dark_icon_size"
            android:layout_height="@dimen/options_dark_icon_size"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/contacts_free_actions_video" />

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/push_social_vippie_freesms"
            android:layout_width="@dimen/options_dark_icon_size"
            android:layout_height="@dimen/options_dark_icon_size"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/contacts_free_actions_chat" />

        <View
            android:layout_width="10dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>