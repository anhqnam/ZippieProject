<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/calls_list_row_background"
	android:gravity="center_vertical"
	android:stretchColumns="1"
	android:paddingTop="7dp"
	android:paddingBottom="7dp">
	<TableRow android:gravity="center_vertical">
	<ImageView android:id="@+id/calls_list_row_icon"
		android:gravity="center"
		android:layout_width="@dimen/calling_calls_list_avatar_size"
		android:layout_height="@dimen/calling_calls_list_avatar_size"
		android:scaleType="fitXY"
		android:padding="10dp"
		/>
		<TableLayout  
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:paddingLeft="20dp"
			android:gravity="center_vertical"
			>
		<TableRow android:gravity="center_vertical">
			    <ImageView
					android:gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/calling_contact_img"
					android:paddingRight="10dp"				
				/>
				<unique.packagename.widget.MainTextView android:id="@+id/calls_list_row_number"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"/>

			</TableRow>
			<TableRow android:gravity="center_vertical">
			    <ImageView
					android:gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/calling_call_state_img"
					android:paddingRight="10dp"
				/>
				<unique.packagename.widget.MainTextView android:id="@+id/calls_list_row_state"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="@string/call_state_active"
					android:paddingTop="4dp"
					android:paddingBottom="4dp"/>
			</TableRow>
			<TableRow android:id="@+id/calls_list_row_timer_table_row"
			    android:gravity="center_vertical">
		    	<ImageView
					android:gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/calling_clock_img"
					android:paddingRight="10dp"
				/>
				<Chronometer android:id="@+id/calls_list_row_timer"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium">
				</Chronometer>
			</TableRow>
		</TableLayout>
		<ImageView android:id="@+id/calls_list_row_quality_indicator"
			android:layout_gravity="right"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:padding="10dp"
			android:src="@drawable/calling_good_quality_dot"
			android:visibility="gone"
		/>
	</TableRow>
</TableLayout>