<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding ="10dp" >
	
    <LinearLayout android:id="@+id/push_voicemail_info"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:paddingBottom="10dp"
		android:gravity="center"
		android:visibility="visible"
		android:orientation="vertical"
		>
        <ImageView
        	android:id="@+id/push_payment_image"
       	 	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/dollar"
        />
        <unique.packagename.widget.MainTextView
            android:id="@+id/push_payment_info_text"
            android:text="@string/push_notification_payment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
        />	
	</LinearLayout>
	
	<LinearLayout 
		style="@style/bottom_bar_push_call_info"
		android:layout_below="@id/push_voicemail_info"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="2"
		>
		
		<include
                android:id="@+id/push_payment_top_up_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                layout="@layout/registration_number_button_go" />
		
	</LinearLayout>
</RelativeLayout>