<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/search_row_avatar"
        android:layout_width="@dimen/contacts_avatar_size"
        android:layout_height="@dimen/contacts_avatar_size"
        android:scaleType="fitXY"
        android:background="@color/avatar_bg"
        android:src="@drawable/ic_list_contact" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="vertical" >

        <unique.packagename.widget.MainTextView
            android:id="@+id/search_first_row"
            style="@style/contacts_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="firstname lastname"
            android:visibility="gone" />
        
        <unique.packagename.widget.MainTextView
            android:id="@+id/search_second_row"
            style="@style/contacts_row_presence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999999999"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>