<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/details_sex_bg"
    android:orientation="horizontal">
    
    <ImageButton
        android:id="@+id/profile_sex_w"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/sex_w" />
    
    <ImageButton
        android:id="@+id/profile_sex_u"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/sex_u" />

    <ImageButton
        android:id="@+id/profile_sex_m"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/sex_m" />
	
</LinearLayout>