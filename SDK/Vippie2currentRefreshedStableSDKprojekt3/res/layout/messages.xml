<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messages_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include
        layout="@layout/custom_activity_title_messages" />

    <include
        layout="@layout/contact_input_panel" />

    <LinearLayout
        android:id="@+id/messages_message_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1" >

        <unique.packagename.widget.MainTextView
            android:id="@+id/messages_message"
            style="@style/list_message"
            android:layout_height="125dp"
            android:layout_width="125dp"
            android:background="@drawable/messages_list_msg"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        style="@style/calllog_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@color/transparent"
        android:drawSelectorOnTop="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:stackFromBottom="true"
        android:transcriptMode="normal" />

    <include
        android:id="@+id/messages_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/messages_msg_compose_panel" />

</LinearLayout>