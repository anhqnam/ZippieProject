<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_title_panel_messages"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/bars_height"
    android:background="@color/tabs"
    android:paddingRight="5dp" >
	
    <ImageView
        android:id="@+id/title_back_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_left" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title_back_btn"
        android:layout_toLeftOf="@+id/activity_title_messages_options"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/activity_title_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_title_icon"
                android:layout_width="@dimen/action_small_icon"
                android:layout_height="@dimen/action_small_icon" />

            <unique.packagename.widget.MainTextView
                android:id="@+id/activity_title"
                style="@style/CustomWindowTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_row_primary"
                android:textStyle="bold" />

            <unique.packagename.widget.SendingIndicator
                android:id="@+id/activity_title_typing"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitEnd" />
        </LinearLayout>

        <unique.packagename.widget.MainTextView
            android:id="@+id/activity_title_presence"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_title_layout"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_row_primary" />
    </LinearLayout>

    <ImageButton
        android:id="@id/activity_title_messages_options"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bottom_bar_btn_selector_both"
        android:scaleType="fitXY"
        android:src="@drawable/button_more" />

</RelativeLayout>