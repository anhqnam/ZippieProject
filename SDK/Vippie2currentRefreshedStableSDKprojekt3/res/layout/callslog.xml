    	style="@style/list_message"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:visibility="gone"
    	/> -->
    
   	<LinearLayout
        android:id="@android:id/empty"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1" >

        <unique.packagename.widget.MainTextView
            android:id="@+id/calllog_message"
            style="@style/list_message"
            android:layout_height="125dp"
            android:layout_width="135dp"
            android:background="@drawable/messages_list_msg"
            android:gravity="center" />
    </LinearLayout>
	<ListView android:id="@id/android:list"
	 	style="@style/calllog_list"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:drawSelectorOnTop="false"
		android:cacheColorHint="#00000000"
		android:divider="@color/contact_list_divider"
		android:dividerHeight="1dp"
	/>
	<include layout="@layout/bottom_bar_call_log" 
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"/>
</LinearLayout>