<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <unique.packagename.widget.TitleBar
            android:id="@+id/title_layout"
            android:background="@color/row_primary"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bars_height"
            app:label="@string/more_help" />

        <LinearLayout
            android:id="@+id/help_faq_row"
            style="@style/options_row_dark"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" >

            <unique.packagename.widget.MainTextView
                style="@style/help_row_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/help_faq" />

            <ImageView
                android:layout_width="@dimen/options_dark_icon_size"
                android:layout_height="@dimen/options_dark_icon_size"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/help_feedback_row"
            style="@style/options_row_dark"
            android:layout_marginTop="20dp"
            android:background="@color/row_secondary"
            android:gravity="center_vertical" >

            <unique.packagename.widget.MainTextView
                style="@style/help_row_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/help_feedback" />

            <ImageView
                android:layout_width="@dimen/options_dark_icon_size"
                android:layout_height="@dimen/options_dark_icon_size"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="20dp" >

            <unique.packagename.widget.MainTextView
                android:id="@+id/help_facebook_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/help_facebook_text"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/text_noneditable" />

            <ImageButton
                android:id="@+id/help_icon_fb"
                android:layout_width="@dimen/options_help_light_icon_size"
                android:layout_height="@dimen/options_help_light_icon_size"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/help_facebook" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <unique.packagename.widget.MainTextView
                android:id="@+id/help_twitter_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/help_twitter_text"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/text_noneditable" />

            <ImageButton
                android:id="@+id/help_icon_twitter"
                android:layout_width="@dimen/options_help_light_icon_size"
                android:layout_height="@dimen/options_help_light_icon_size"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/help_twitter" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>