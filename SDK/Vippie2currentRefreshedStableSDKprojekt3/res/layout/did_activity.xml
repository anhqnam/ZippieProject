<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:id="@+id/panel_bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bars_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/tabs"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/number_edit"
            android:layout_width="@dimen/bottom_bar_btn_height"
            android:layout_height="@dimen/bottom_bar_btn_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bottom_bar_btn_selector_both"
            android:src="@drawable/did_edit"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/number_add"
            style="@style/bottom_bar_vippie"
            android:layout_width="@dimen/bottom_bar_btn_height"
            android:layout_height="@dimen/bottom_bar_btn_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bottom_bar_btn_selector_both"
            android:src="@drawable/ic_contacts_add"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/panel_bottom_bar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <unique.packagename.widget.TitleBar
                android:id="@+id/title_layout"
                android:background="@color/row_primary"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/bars_height"
                app:label="@string/did_title" />

            <LinearLayout
                android:id="@+id/numbers_section"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="20dp" >

                <unique.packagename.widget.MainTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/did_my_numbers"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_noneditable" />

                <unique.packagename.widget.LinearListView
                    android:id="@+id/numbers_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/transparent"
                    android:orientation="vertical" >
                </unique.packagename.widget.LinearListView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy_new_section"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    style="@style/options_row_dark"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp" >

                    <unique.packagename.widget.MainButton
                        android:id="@+id/buy_show"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/options_dark_icon_size"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:background="@color/transparent"
                        android:gravity="left|center_vertical"
                        android:text="@string/did_buy_new"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text_row_primary" />

                    <ImageView
                        android:layout_width="@dimen/options_dark_icon_size"
                        android:layout_height="@dimen/options_dark_icon_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy_section"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <unique.packagename.widget.MainTextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/did_pick_country"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_noneditable" />

                <RelativeLayout style="@style/options_row_dark" >

                    <Spinner
                        android:id="@+id/country_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent" />

                    <ImageView
                        android:layout_width="@dimen/options_dark_icon_size"
                        android:layout_height="@dimen/options_dark_icon_size"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <unique.packagename.widget.MainTextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/did_pick_area"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_noneditable" />

                <RelativeLayout style="@style/options_row_dark" >

                    <Spinner
                        android:id="@+id/area_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent" />

                    <ImageView
                        android:layout_width="@dimen/options_dark_icon_size"
                        android:layout_height="@dimen/options_dark_icon_size"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <unique.packagename.widget.MainTextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/did_pick_period"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text_noneditable" />

                <RelativeLayout style="@style/options_row_dark" >

                    <Spinner
                        android:id="@+id/period_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent" />

                    <ImageView
                        android:layout_width="@dimen/options_dark_icon_size"
                        android:layout_height="@dimen/options_dark_icon_size"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center_vertical" >

                    <unique.packagename.widget.MainTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/did_order"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@color/text_noneditable" />

                    <ImageButton
                        android:id="@+id/order"
                        android:layout_width="@dimen/options_large_icon"
                        android:layout_height="@dimen/options_large_icon"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:background="@color/transparent"
                        android:gravity="left|center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/option_buy" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>