<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messages_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/messages_incoming_row_bg"
    android:minHeight="@dimen/messages_avatar_size"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >

        <unique.packagename.widget.MainTextView
            android:id="@+id/messages_list_row_text"
            style="@style/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="aaasdasdasdasda"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/messages_list_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/messages_list_row_attachment_download"
                    android:layout_width="@dimen/messages_attachment_btn"
                    android:layout_height="@dimen/messages_attachment_btn"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/att_download"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/messages_list_row_attachment_view"
                    android:layout_width="@dimen/messages_attachment_btn"
                    android:layout_height="@dimen/messages_attachment_btn"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/att_view"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/messages_list_row_attachment_resend"
                    android:layout_width="@dimen/messages_attachment_btn"
                    android:layout_height="@dimen/messages_attachment_btn"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/att_forward"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/messages_list_row_attachment_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/messages_list_row_attachment_img"
                    style="@style/message_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:paddingLeft="0dp"
                    android:scaleType="fitCenter"
                    android:visibility="visible" />

                <ProgressBar
                    android:id="@+id/messages_list_row_attachment_spinner"
                    style="@style/Widget.AppCompat.Base.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/message_attachment_progress_bar"
            style="@style/Widget.ProgressBar.Horizontal.Custom"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignLeft="@id/messages_list_container"
            android:layout_alignRight="@id/messages_list_container"
            android:max="100"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right|bottom"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/messages_message_delivered"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/checkmark"
            android:visibility="visible" />

        <unique.packagename.widget.MainTextView
            android:id="@+id/messages_list_row_date"
            style="@style/message_date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:gravity="bottom"
            android:text="data" />

        <unique.packagename.widget.SendingIndicator
            android:id="@+id/messages_list_row_sending"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter" />
    </LinearLayout>

</LinearLayout>