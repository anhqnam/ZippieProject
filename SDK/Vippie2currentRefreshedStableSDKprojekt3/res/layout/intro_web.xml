<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/reg_top_bar"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:background="@color/tabs" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <WebView
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tab_host_height" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tab_host_height"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:background="@color/tabs" />

        <ImageView
            android:id="@+id/dots"
            android:layout_width="44dp"
            android:layout_height="11dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@drawable/intro_dots3" />

        <LinearLayout
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="10dp" >

            <unique.packagename.widget.MainTextView
                android:id="@+id/go"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tab_host_height"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="@string/intro_end"
                android:textColor="@color/white" />

            <ImageButton
                android:layout_width="@dimen/intro_icon_size_small"
                android:layout_height="@dimen/intro_icon_size_small"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_go_white" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>