<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <unique.packagename.widget.TitleBar
        android:id="@+id/title_layout"
        android:background="@color/row_primary"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bars_height"
        app:label="@string/more_my_profile"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/contact_info_avatar_container_height"
                android:background="@drawable/background_p"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/contact_info_avatar_section_fake"
                    android:layout_width="@dimen/contact_info_avatar_container_width"
                    android:layout_height="@dimen/contact_info_avatar_container_height"
                    android:background="@color/transparent" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/contact_info_avatar_container_height"
                    android:layout_marginLeft="-8dp"
                    android:layout_toRightOf="@id/contact_info_avatar_section_fake"
                    android:background="@color/presence_bg"
                    android:orientation="vertical" >

                    <unique.packagename.widget.MainEditText
                        android:id="@+id/profile_status"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:hint="@string/profile_my_status"
                        android:padding="15dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/row_primary"
                        android:textColorHint="@color/row_secondary" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/contact_info_avatar_container_width"
                    android:layout_height="@dimen/contact_info_avatar_container_height" >

                    <include
                        android:layout_width="@dimen/contact_info_avatar_container_width"
                        android:layout_height="@dimen/contact_info_avatar_container_height"
                        android:layout_margin="5dp"
                        layout="@layout/avatar_profile" />

                    <ImageView
                        android:layout_width="@dimen/action_icon_profile"
                        android:layout_height="@dimen/action_icon_profile"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/profile_avatar_change" />
                </RelativeLayout>
            </RelativeLayout>
            <!-- ========================================================Bottom part=========================================================================== -->

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TableRow
                    style="@style/myprofile_row"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="35dp" >

                    <unique.packagename.widget.MainTextView
                        android:id="@+id/profile_vippie_id"
                        style="@style/my_profile_row_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/profile_vippie_id" />

                    <unique.packagename.widget.MainTextView
                        android:id="@+id/profile_vippie_id_val"
                        style="@style/iphone_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/textfield_default_holo_light"
                        android:hint="@string/profile_not_set_hint" />
                </TableRow>

                <TableRow
                    style="@style/myprofile_row"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" >

                    <unique.packagename.widget.MainTextView
                        android:id="@+id/profile_your_number"
                        style="@style/my_profile_row_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/profile_your_number" />

                    <unique.packagename.widget.MainTextView
                        android:id="@+id/profile_your_number_val"
                        style="@style/iphone_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/textfield_default_holo_light"
                        android:hint="@string/profile_not_set_hint" />
                </TableRow>

                <TableRow
                    style="@style/myprofile_row"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" >

                    <unique.packagename.widget.MainTextView
                        android:id="@+id/profile_passwrod"
                        style="@style/my_profile_row_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/profile_password" />

                    <unique.packagename.widget.MainTextView
                        android:id="@+id/profile_password_val"
                        style="@style/iphone_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/textfield_default_holo_light"
                        android:hint="@string/profile_not_set_hint" />
                </TableRow>

                <TableRow
                    style="@style/myprofile_row"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" >

                    <unique.packagename.widget.MainTextView
                        android:id="@+id/profile_email"
                        style="@style/my_profile_row_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/profile_email" />

                    <unique.packagename.widget.MainEditText
                        android:id="@+id/profile_email_val"
                        style="@style/iphone_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/textfield_default_holo_light"
                        android:hint="@string/profile_not_set_hint"
                        android:inputType="textEmailAddress"
                        android:longClickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/dids_details_section"
                style="@style/options_row_dark"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="35dp" >

                <unique.packagename.widget.MainTextView
                    android:id="@+id/dids_details"
                    style="@style/my_profile_option_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/dids_details" />

                <ImageButton
                    android:id="@+id/dids_details_button"
                    android:layout_width="@dimen/options_light_icon_size_profile"
                    android:layout_height="@dimen/options_light_icon_size_profile"
                    android:background="@color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_details_section"
                style="@style/options_row_dark"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <unique.packagename.widget.MainTextView
                    android:id="@+id/profile_details"
                    style="@style/my_profile_option_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/profile_details" />

                <ImageButton
                    android:id="@+id/profile_details_button"
                    android:layout_width="@dimen/options_light_icon_size_profile"
                    android:layout_height="@dimen/options_light_icon_size_profile"
                    android:background="@color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>