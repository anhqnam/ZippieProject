<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/calling_list_entry_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <unique.packagename.widget.MainTextView
        android:id="@+id/call_status"
        style="@style/CallingListEntryHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Calling" />

    <RelativeLayout
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/call_status"
        android:background="@drawable/calling_list_entry_separator"
        android:padding="20dp" />

    <RelativeLayout
        android:id="@+id/call_avatar_container"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/separator"
        android:layout_width="@dimen/calls_list_avatar_size"
        android:layout_height="@dimen/calls_list_avatar_size" >

        <ImageView
            android:id="@+id/call_avatar"
            android:layout_width="@dimen/calls_list_avatar_size"
            android:layout_height="@dimen/calls_list_avatar_size"
            android:scaleType="fitCenter"
            android:src="@drawable/calling_unknown_image" />

    </RelativeLayout>

    <unique.packagename.widget.MainTextView
        android:id="@+id/call_uri"
        style="@style/CallingListEntryUriText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_marginBottom="5dp"
        android:text="rafasfsdfsf"
        android:layout_toRightOf="@id/call_avatar_container" />

    <ImageButton
        android:id="@+id/call_incoming_accept"
        style="@style/CallingListEntryButton"
        android:layout_width="@dimen/options_dark_icon_size"
        android:layout_height="@dimen/options_dark_icon_size"
        android:scaleType="fitXY"
        android:layout_below="@id/call_uri"
        android:layout_toRightOf="@id/call_avatar_container"
        android:src="@drawable/ic_calling_accept_call" />

    <ImageButton
        android:id="@+id/call_incoming_accept_video"
        style="@style/CallingListEntryButton"
        android:layout_width="@dimen/options_dark_icon_size"
        android:layout_height="@dimen/options_dark_icon_size"
        android:scaleType="fitXY"        
        android:layout_below="@id/call_uri"
        android:layout_marginLeft="@dimen/calls_list_buttons_distance"
        android:layout_toRightOf="@id/call_incoming_accept"
        android:src="@drawable/button_calling_accept_video_call" />

    <ImageButton
        android:id="@+id/call_incoming_reject"
        style="@style/CallingListEntryButton"
        android:layout_width="@dimen/options_dark_icon_size"
        android:layout_height="@dimen/options_dark_icon_size"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_below="@id/call_uri"
        android:layout_marginLeft="@dimen/calls_list_buttons_distance"
        android:src="@drawable/button_calling_end_call" />

    <ImageButton
        android:id="@+id/call_outgoing_toggle_mic"
        style="@style/CallingListEntryButton"
        android:layout_width="@dimen/options_dark_icon_size"
        android:layout_height="@dimen/options_dark_icon_size"
        android:scaleType="fitXY"
        android:layout_below="@id/call_uri"
        android:layout_toRightOf="@id/call_avatar_container"
        android:src="@drawable/button_calling_toggle_mic_off" />

    <ImageButton
        android:id="@+id/call_outgoing_toggle_speaker"
        style="@style/CallingListEntryButton"
        android:layout_width="@dimen/options_dark_icon_size"
        android:layout_height="@dimen/options_dark_icon_size"
        android:scaleType="fitXY"
        android:layout_below="@id/call_uri"
        android:layout_marginLeft="@dimen/calls_list_buttons_distance"
        android:layout_toRightOf="@id/call_outgoing_toggle_mic"
        android:src="@drawable/button_calling_toggle_speaker_off" />

    <ImageButton
        android:id="@+id/call_outgoing_end"
        style="@style/CallingListEntryButton"
        android:layout_width="@dimen/options_dark_icon_size"
        android:layout_height="@dimen/options_dark_icon_size"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_below="@id/call_uri"
        android:layout_marginLeft="@dimen/calls_list_buttons_distance"
        android:src="@drawable/button_calling_end_call" />

    <ImageButton
        android:id="@+id/call_outgoing_close"
        style="@style/CallingListEntryButton"
        android:layout_width="@dimen/options_dark_icon_size"
        android:layout_height="@dimen/options_dark_icon_size"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_below="@id/call_uri"
        android:layout_marginLeft="@dimen/calls_list_buttons_distance"
        android:src="@drawable/button_calling_close_call" />

</RelativeLayout>