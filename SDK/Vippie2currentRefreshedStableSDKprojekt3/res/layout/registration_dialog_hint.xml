<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <unique.packagename.widget.MainTextView
                android:id="@+id/registration_hint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="hint"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/text_row_primary" />
        </ScrollView>
    </LinearLayout>

    <unique.packagename.widget.MainTextView
        android:id="@+id/registration_want_to_know"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left|center_vertical"
        android:text="@string/registration_dialog_want_more"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/registration_hint_dialog" />

    <unique.packagename.widget.MainTextView
        android:id="@+id/registration_need_help"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left|center_vertical"
        android:text="@string/registration_dialog_need_help"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/registration_help_dialog" />

</LinearLayout>