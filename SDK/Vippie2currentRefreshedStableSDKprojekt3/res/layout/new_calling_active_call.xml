<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/active_call_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/background_p" />

    <unique.packagename.dialer.widget.VideoContent
        android:id="@+id/active_call_video_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

    <unique.packagename.ui.HorizontalListView
        android:id="@+id/top_calls_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:cacheColorHint="#00000000"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/active_call_info_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/transparent_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <unique.packagename.dialer.widget.CallSrtpContent
            android:id="@+id/active_call_srtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <unique.packagename.widget.MainTextView
                android:id="@+id/active_call_uri"
                style="@style/CallingActiveCallUriText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Name Name"
                android:textSize="@dimen/calling_active_call_uri_text_size" />

            <Chronometer
                android:id="@+id/active_call_time"
                style="@style/CallingActiveCallUriText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0:15"
                android:textSize="@dimen/calling_active_call_time_text_size" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/active_call_avatar_container"
        android:layout_width="@dimen/active_call_avatar_size"
        android:layout_height="@dimen/active_call_avatar_size"
        android:layout_above="@id/active_call_info_panel"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/active_call_avatar"
            android:layout_width="@dimen/active_call_avatar_size"
            android:layout_height="@dimen/active_call_avatar_size"
            android:src="@drawable/calling_unknown_image" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/active_call_operations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/active_call_info_panel"
        android:layout_centerHorizontal="true" >

        <ImageButton
            android:id="@+id/active_call_toggle_mic"
            style="@style/CallingActiveCallButton"
            android:layout_width="@dimen/action_medium_icon"
            android:layout_height="@dimen/action_medium_icon"
            android:scaleType="fitXY"
            android:src="@drawable/button_calling_toggle_mic" />

        <ImageButton
            android:id="@+id/active_call_toggle_speaker"
            style="@style/CallingActiveCallButton"
            android:layout_width="@dimen/action_medium_icon"
            android:layout_height="@dimen/action_medium_icon"
            android:layout_marginLeft="@dimen/calls_list_buttons_distance"
            android:layout_toRightOf="@id/active_call_toggle_mic"
            android:scaleType="fitXY"
            android:src="@drawable/button_calling_toggle_speaker" />

        <ImageButton
            android:id="@+id/active_call_toggle_hold"
            style="@style/CallingActiveCallButton"
            android:layout_width="@dimen/action_medium_icon"
            android:layout_height="@dimen/action_medium_icon"
            android:layout_marginLeft="@dimen/calls_list_buttons_distance"
            android:layout_toRightOf="@id/active_call_toggle_speaker"
            android:scaleType="fitXY"
            android:src="@drawable/button_calling_toggle_hold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/active_call_bottom_panel"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bars_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/calling_active_call_bottom_panel_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/active_call_end_placeholder"
            android:layout_width="@dimen/calls_list_button_end_width"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/calls_list_buttons_distance"
            android:layout_marginRight="@dimen/calls_list_buttons_distance"
            android:src="@drawable/button_calling_active_call_end"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/active_call_attachment"
            style="@style/CallingListEntryButton"
            android:layout_width="@dimen/calls_list_buttons_size"
            android:layout_height="@dimen/calls_list_buttons_size"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/active_call_end_placeholder"
            android:scaleType="fitXY"
            android:src="@drawable/button_calling_attachment" />

        <ImageButton
            android:id="@+id/active_call_chat"
            style="@style/CallingActiveCallButton"
            android:layout_width="@dimen/calls_list_buttons_size"
            android:layout_height="@dimen/calls_list_buttons_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/calls_list_buttons_distance"
            android:layout_marginRight="@dimen/calls_list_buttons_distance"
            android:layout_toLeftOf="@id/active_call_attachment"
            android:scaleType="fitXY"
            android:src="@drawable/button_calling_chat" />

        <ImageButton
            android:id="@+id/active_call_enable_video"
            style="@style/CallingListEntryButton"
            android:layout_width="@dimen/calls_list_buttons_size"
            android:layout_height="@dimen/calls_list_buttons_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/active_call_end_placeholder"
            android:scaleType="fitXY"
            android:src="@drawable/button_calling_start_video" />

        <ImageButton
            android:id="@+id/active_call_more"
            style="@style/CallingListEntryButton"
            android:layout_width="@dimen/calls_list_buttons_size"
            android:layout_height="@dimen/calls_list_buttons_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/active_call_enable_video"
            android:scaleType="fitXY"
            android:src="@drawable/button_calling_more" />
    </RelativeLayout>

    <unique.packagename.dialer.widget.DialpadCalling
        android:id="@id/calling_dialpad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/active_call_bottom_panel"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/active_call_end"
        style="@style/CallingActiveCallButton"
        android:layout_width="@dimen/calls_list_button_end_width"
        android:layout_height="@dimen/calls_list_button_end_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/button_calling_active_call_end" />

    <ImageButton
        android:id="@+id/active_call_accept"
        style="@style/CallingActiveCallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/button_calling_active_call_accept"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/active_call_accept_video"
        style="@style/CallingActiveCallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/button_calling_active_call_accept_video"
        android:visibility="invisible" />

    <unique.packagename.dialer.widget.IncomingCallOperations
        android:id="@+id/active_call_screenlock_incoming_call_operations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <unique.packagename.dialer.widget.CallQualityContent
        android:id="@+id/active_call_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

</RelativeLayout>