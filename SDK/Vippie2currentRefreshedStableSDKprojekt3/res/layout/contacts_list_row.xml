<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/contacts_row"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/contacts_avatar_container_height" >

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/contacts_avatar_container_height"
        android:layout_gravity="center"
        android:layout_marginLeft="-9dp"
        android:layout_toLeftOf="@+id/contacts_actions_clicable"
        android:layout_toRightOf="@+id/avatar_container"
        android:gravity="center_vertical"
        android:paddingLeft="9dp" >

        <unique.packagename.widget.MainTextView
            android:id="@+id/contacts_row_name"
            style="@style/contacts_row_name"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/contacts_avatar_container_half"
            android:layout_alignParentTop="true"
            android:gravity="bottom"
            android:ellipsize="end"
            android:singleLine="true" />

        <unique.packagename.widget.MainTextView
            android:id="@+id/contacts_row_number"
            style="@style/contacts_row_number"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/contacts_avatar_container_half"
            android:layout_below="@id/contacts_row_name"
            android:gravity="top"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone" />

        <unique.packagename.widget.MinorTextView
            android:id="@+id/contacts_row_presence"
            style="@style/contacts_row_presence"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/contacts_avatar_container_half"
            android:layout_below="@id/contacts_row_name"
            android:gravity="top"
            android:ellipsize="end" />
    </RelativeLayout>

    <FrameLayout
        android:id="@id/contacts_actions_clicable"
        android:layout_width="60dp"
        android:layout_height="@dimen/contacts_avatar_container_height"
        android:layout_alignParentRight="true" 
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/contacts_actions"
            android:layout_width="@dimen/action_small_icon"
            android:layout_height="@dimen/action_small_icon"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/contacts_vippie_actions_selector"
            android:visibility="visible" />
    </FrameLayout>

    <RelativeLayout
        android:id="@id/avatar_container"
        android:layout_width="@dimen/contacts_avatar_container_width"
        android:layout_height="@dimen/contacts_avatar_container_height"
        android:layout_alignParentLeft="true" >

        <include layout="@layout/avatar" />

        <ImageView
            android:id="@+id/contacts_row_im_icon"
            android:layout_width="@dimen/action_small_icon"
        	android:layout_height="@dimen/action_small_icon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:clickable="false"
            android:src="@drawable/ic_xmpp_online"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>