<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/options_row_light"       
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" >

        <unique.packagename.widget.MainTextView
            android:id="@+id/contacts_info_numbers_type"
            style="@style/contacts_info_number_row_text" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Type" />

        <unique.packagename.widget.MainTextView
            android:id="@+id/contacts_info_numbers_number"
            style="@style/contacts_info_number_row_text_native"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:singleLine="true"
            android:gravity="right"
            android:text="5454" />

        <ImageView
            android:id="@+id/contact_info_platform"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@drawable/platform_android"
            android:visibility="gone" />
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/vippie_share_row"
        style="@style/options_row_dark"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="visible"  >

        <unique.packagename.widget.MainTextView
            style="@style/contacts_info_number_row_text_vippie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vippie_share" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/vippie_share_image"
            android:layout_width="@dimen/options_dark_icon_size"
            android:layout_height="@dimen/options_dark_icon_size"
            android:scaleType="fitXY"
            android:background="@color/transparent"
            android:src="@drawable/ic_social_share" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vippie_freecall_row"
        style="@style/options_row_dark"
        android:background="@color/row_secondary"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"  >

        <unique.packagename.widget.MainTextView
            style="@style/contacts_info_number_row_text_vippie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vippie_freecall" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/vippie_freecall"
            android:layout_width="@dimen/options_dark_icon_size"
            android:layout_height="@dimen/options_dark_icon_size"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:src="@drawable/contact_info_free_call" />

        <ImageButton
            android:id="@+id/vippie_freevid"
            android:scaleType="fitXY"
            android:layout_width="@dimen/options_dark_icon_size"
            android:layout_height="@dimen/options_dark_icon_size"
            android:background="@color/transparent"
            android:src="@drawable/contact_info_free_video" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vippie_freesms_row"
        style="@style/options_row_dark"
        android:background="@color/row_secondary"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"  >

        <unique.packagename.widget.MainTextView
            style="@style/contacts_info_number_row_text_vippie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vippie_freesms" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/vippie_freesms"
            android:layout_width="@dimen/options_dark_icon_size"
            android:layout_height="@dimen/options_dark_icon_size"
            android:scaleType="fitXY"
            android:background="@color/transparent"
            android:src="@drawable/contact_info_free_chat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_int_call_row"
        style="@style/options_row_light"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"  >

        <unique.packagename.widget.MainTextView
            style="@style/contacts_info_number_row_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_info_call" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ViewSwitcher
            android:id="@+id/call_checkrate_check"            
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" 
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical">

            <ImageView                
                android:layout_width="@dimen/options_light_icon_size_profile"
                android:layout_height="@dimen/options_light_icon_size_profile"
                android:focusable="true"                
            	android:focusableInTouchMode="true"
            	android:layout_gravity="center_horizontal"
                android:src="@drawable/contacts_actions_rates" />

            <ProgressBar
                android:id="@+id/contact_checkrate_progress"
                android:focusable="true"
            	android:focusableInTouchMode="true"            	
            	android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/options_light_icon_size_profile"
                android:layout_height="@dimen/options_light_icon_size_profile" />
        </ViewSwitcher>

        <unique.packagename.widget.MainTextView
            android:id="@+id/call_rate"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/contact_int_call"
            android:layout_width="@dimen/options_light_icon_size_profile"
            android:layout_height="@dimen/options_light_icon_size_profile"
            android:scaleType="fitXY"
            android:background="@color/transparent"
            android:src="@drawable/contacts_actions_call" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_int_sms_row"
        style="@style/options_row_light"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" >
        <!-- android:background="@drawable/contact_info_standard_action" -->
		
		
        <unique.packagename.widget.MainTextView
            style="@style/contacts_info_number_row_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_info_send_text" />
        
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

		<ViewSwitcher
            android:id="@+id/sms_checkrate_check"            
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical">

            <ImageView                
                android:layout_width="@dimen/options_light_icon_size_profile"
                android:layout_height="@dimen/options_light_icon_size_profile"
                android:focusable="true"                
            	android:focusableInTouchMode="true"
            	android:layout_gravity="center_horizontal"
                android:src="@drawable/contacts_actions_rates" />

            <ProgressBar
                android:id="@+id/sms_checkrate_progress"
                android:focusable="true"
            	android:focusableInTouchMode="true"
            	android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/options_light_icon_size_profile"
                android:layout_height="@dimen/options_light_icon_size_profile" />
        </ViewSwitcher>

        <unique.packagename.widget.MainTextView
            android:id="@+id/sms_rate"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:visibility="gone" />
		
        <ImageButton
            android:id="@+id/contact_int_sms"
            android:layout_width="@dimen/options_light_icon_size_profile"
            android:layout_height="@dimen/options_light_icon_size_profile"
            android:scaleType="fitXY"
            android:background="@color/transparent"
            android:src="@drawable/contacts_actions_chat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_add_to_fav_row"
        style="@style/options_row_light"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone" >

        <unique.packagename.widget.MainTextView
            style="@style/contacts_info_number_row_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_info_add_to_fav" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/contact_add_to_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/contacts_actions_add_to_fav" />
    </LinearLayout>

</LinearLayout>