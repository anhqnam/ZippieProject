<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/unique.packagename"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/contact_info_bg_color"
    android:orientation="vertical" >

    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <unique.packagename.widget.TitleBar
        android:id="@+id/title_layout"
        android:background="@color/row_primary"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bars_height"/>

    <unique.packagename.widget.CustomScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/contact_info_avatar_container_height_with_margin"
                android:gravity="top"
                android:orientation="vertical" >

                <include layout="@layout/actions_row" />

                <!-- <include layout="@layout/horizontal_separator"></include> -->

                <LinearLayout
                    android:id="@+id/contacts_call_log_section"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/contacts_call_log_section_incoming"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <unique.packagename.widget.MainTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/contact_info_incoming"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/row_primary"
                            android:textStyle="bold" />

                        <unique.packagename.widget.LinearListView
                            android:id="@+id/contact_callog_incoming"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contacts_call_log_section_outgoing"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <unique.packagename.widget.MainTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/contact_info_outgoing"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/row_primary"
                            android:textStyle="bold" />

                        <unique.packagename.widget.LinearListView
                            android:id="@+id/contact_callog_outgoing"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </LinearLayout>
                </LinearLayout>

                <unique.packagename.widget.viewflow.ViewFlow
                    android:id="@+id/contact_numbers_list"
                    android:layout_width="fill_parent"
                    android:layout_height="315dp"
                    android:duplicateParentState="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <!--
                    <unique.packagename.widget.LinearListView
                     android:id="@+id/contact_numbers_list"
					android:id="@+id/contact_numbers_list"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical" 
					android:layout_weight="1"
					
					/>
                -->

                <FrameLayout
                    android:id="@+id/panel_native_numbers"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <unique.packagename.widget.LinearListView
                        android:id="@+id/contact_native_list"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/panel_voicemail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <unique.packagename.widget.LinearListView
                        android:id="@+id/contact_voicemail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </FrameLayout>

                <!--
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <unique.packagename.widget.MainButton
                        android:id="@+id/contact_int_sms"
                        style="@style/contacts_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/iphone_background_both"
                        android:text="@string/contact_info_send_text" />

                    <unique.packagename.widget.MainButton
                        android:id="@+id/contact_add_to_fav"
                        style="@style/contacts_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/iphone_background_both"
                        android:text="@string/contact_info_add_to_fav"
                        android:visibility="invisible" />
                </LinearLayout>
                -->
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/panel_avatar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/contact_info_avatar_container_height_with_margin"
                    android:background="@drawable/background_p"
                    android:drawingCacheQuality="high" />

                <LinearLayout
                    android:id="@+id/contact_info_presence_text_section"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/contact_info_avatar_container_height_with_margin"
                    android:layout_marginLeft="-8dp"
                    android:layout_toRightOf="@+id/contact_info_avatar_section_fake"
                    android:background="@color/presence_bg"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <unique.packagename.widget.MainEditText
                        android:id="@+id/contact_info_status"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:minLines="1"
                        android:padding="15dp"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/row_primary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contact_info_invite_section"
                    style="@style/options_row_dark"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="36dp"
                    android:layout_toRightOf="@+id/contact_info_avatar_section_fake"
                    android:background="@color/transparent"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:visibility="visible" >

                    <ImageButton
                        android:id="@+id/contact_info_invite_btn"
                        android:layout_width="@dimen/options_dark_icon_size"
                        android:layout_height="@dimen/options_dark_icon_size"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/row_circle"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/btn_invite_to_vippie" />

                    <unique.packagename.widget.MainTextView
                        android:id="@+id/contact_info_invite_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Invite to Vippie!"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/row_primary" />
                </LinearLayout>

                <unique.packagename.widget.viewflow.CircleFlowIndicator
                    android:id="@+id/contact_viewflowindic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/contact_info_presence_text_section"
                    android:layout_alignRight="@id/contact_info_presence_text_section"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#00000000"
                    app:activeColor="@color/vippie_violet"
                    app:inactiveColor="@color/vippie_violet" />

                <View
                    android:id="@+id/contact_info_avatar_section_fake"
                    android:layout_width="@dimen/contact_info_avatar_container_width"
                    android:layout_height="@dimen/contact_info_avatar_container_height_with_margin"
                    android:background="@color/transparent" />

                <FrameLayout
                    android:id="@+id/contact_info_avatar_section"
                    android:layout_width="@dimen/contact_info_avatar_container_width"
                    android:layout_height="@dimen/contact_info_avatar_container_height"
                    android:layout_margin="5dp" >

                    <include
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        layout="@layout/avatar_profile" />
                </FrameLayout>
            </RelativeLayout>
        </RelativeLayout>
    </unique.packagename.widget.CustomScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!--
             <unique.packagename.widget.BottomBar
            android:id="@+id/contact_info_bottom_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        -->

        <RelativeLayout
            android:id="@+id/panel_bottom_bar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bars_height"
            android:background="@color/tabs"
            android:gravity="center_vertical"
            android:padding="5dp" >

            <unique.packagename.widget.MainButton
                android:id="@+id/contact_share"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bottom_bar_btn_selector_both"
                android:padding="3dp"
                android:text="@string/contact_info_share"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/edit_calllog"
                android:layout_width="@dimen/bottom_bar_btn_height"
                android:layout_height="@dimen/bottom_bar_btn_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bottom_bar_btn_selector_both"
                android:src="@drawable/did_edit"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/contact_edit"
                android:layout_width="@dimen/bottom_bar_btn_height"
                android:layout_height="@dimen/bottom_bar_btn_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/bottom_bar_btn_selector_both"
                android:src="@drawable/contact_info_edit"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/contact_add"
                style="@style/bottom_bar_vippie"
                android:layout_width="@dimen/bottom_bar_btn_height"
                android:layout_height="@dimen/bottom_bar_btn_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/bottom_bar_btn_selector_both"
                android:src="@drawable/ic_contacts_add" />

            <ImageButton
                android:id="@+id/contact_show"
                style="@style/bottom_bar_vippie"
                android:layout_width="@dimen/bottom_bar_btn_height"
                android:layout_height="@dimen/bottom_bar_btn_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/bottom_bar_btn_selector_both"
                android:src="@drawable/messages_contact_info" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>