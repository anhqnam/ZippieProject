<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recharge_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <unique.packagename.widget.TitleBar
                android:id="@+id/label"
                android:background="@color/row_primary"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/bars_height"
                app:label="@string/account_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dip"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" >

                <unique.packagename.widget.MainTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="@string/account_your_balance"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/text_noneditable" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_margin="2dp"
                    android:background="@color/vippie_violet" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical" >

                    <unique.packagename.widget.MainTextView
                        android:id="@+id/recharge_balance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="-,-"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@color/vippie_pink" />

                    <LinearLayout
                        android:id="@+id/row_web_payments"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="2dp"
                        android:background="@color/vippie_pink"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" >

                        <unique.packagename.widget.MainTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:text="@string/account_top_up"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/text_row_primary"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bonus_section"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dip"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" >

                <unique.packagename.widget.MainTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="@string/account_your_bonus"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/text_noneditable" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_margin="2dp"
                    android:background="@color/vippie_violet" />

                <unique.packagename.widget.MainTextView
                    android:id="@+id/bonus_empty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text="@string/account_bonus_empty"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textColor="@color/text_noneditable" />

                <LinearLayout
                    android:id="@+id/bonus_items_section"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_get_more"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/vippie_orange"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <unique.packagename.widget.MainTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/account_get_more"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/text_row_primary"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <unique.packagename.widget.LinearListView
                android:id="@+id/recharge_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:cacheColorHint="#00000000"
                android:divider="@color/transparent"
                android:dividerHeight="1dp"
                android:orientation="vertical"
                android:scrollingCache="true"
                android:visibility="gone" >
            </unique.packagename.widget.LinearListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <unique.packagename.widget.MainTextView
                android:id="@+id/offers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text="@string/account_offers"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_noneditable" />

            <LinearLayout
                android:id="@+id/row_numbers"
                style="@style/options_row_dark"
                android:layout_width="fill_parent"
                android:orientation="horizontal" >

                <unique.packagename.widget.MainTextView
                    android:id="@+id/label_numbers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/account_numbers"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/text_row_primary" />

                <ImageView
                    android:layout_width="@dimen/options_dark_icon_size"
                    android:layout_height="@dimen/options_dark_icon_size"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_plans"
                style="@style/options_row_dark"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <unique.packagename.widget.MainTextView
                    android:id="@+id/label_plans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/account_plans"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/text_row_primary" />

                <ImageView
                    android:layout_width="@dimen/options_dark_icon_size"
                    android:layout_height="@dimen/options_dark_icon_size"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/arrow_right" />
            </LinearLayout>

            <unique.packagename.widget.MainTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/rates_country_section"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="@color/text_noneditable" />
			<RelativeLayout 
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:layout_gravity="left"
			    android:gravity="left">
	            <Spinner
	                android:id="@+id/rates_country_spiner"
	                style="@style/options_row_dark"
	                android:layout_width="fill_parent"
	                android:fastScrollEnabled="true"
	                android:prompt="@string/rates_country_prompt"
	                android:textAppearance="@android:style/TextAppearance.Medium"
	                android:textColor="@color/white" >
	            </Spinner>
	            <ProgressBar 
	                android:id="@+id/rates_country_progress"
	                style="@style/options_row_dark"
	                android:layout_width="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:visibility="gone"
	                />
            </RelativeLayout>

            <unique.packagename.widget.MainTextView
                android:id="@+id/rates_call_rates"
                style="@style/rates_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/rates_call_rates"
                android:textColor="@color/text_noneditable" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top" >

                <unique.packagename.widget.LinearListView
                    android:id="@+id/rates_cr"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >
                </unique.packagename.widget.LinearListView>
            </FrameLayout>

            <unique.packagename.widget.MainTextView
                android:id="@+id/rates_sms_rates"
                style="@style/rates_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/rates_sms_rates"
                android:textColor="@color/text_noneditable" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top" >

                <unique.packagename.widget.LinearListView
                    android:id="@+id/rates_sr"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >
                </unique.packagename.widget.LinearListView>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>