<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lunextelecom.zippie"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lunextelecom.zippie.activity.SignUpActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SignUp"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	<activity
            android:name="com.lunextelecom.zippie.activity.TopMenuActivity"
            android:label="@string/app_name" 
            android:theme="@style/Theme.SignUp">
        </activity>
	<activity
            android:name="com.lunextelecom.zippie.activity.ContactListActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
