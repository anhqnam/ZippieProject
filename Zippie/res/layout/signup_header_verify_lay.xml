<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height_size"
    android:background="@color/common_button_default_notpress_col"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/signup_back_fragment_id"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/signup_header_verify_back_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:src="@drawable/common_back_icon" />

        <TextView
            android:id="@+id/signup_header_verify_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_48_point"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>