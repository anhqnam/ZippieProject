<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.lunextelecom.zippie"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.lunextelecom.zippie.view.CircularImageView
                android:id="@+id/ivContactAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_contact_avatar"
                app:border_color="#EEEEEE"
                app:border_width="0.5dp"
                app:shadow="true" />

            <ImageView
                android:id="@+id/ivContactStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_contact_status" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:maxLength="@integer/max_length"
            android:text="@string/contact_name"
            android:textSize="@dimen/contact_name_size" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp" >

            <Button
                android:id="@+id/ivContactInvite"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/contact_button_change"
                android:focusable="false"
                android:text="@string/contact_invite"
                android:textColor="@color/color_button_contact"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivContactSms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="@drawable/contact_image_change"
                android:contentDescription="@null"
                android:src="@drawable/ic_contact_sms"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivContactCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/contact_image_change"
                android:contentDescription="@null"
                android:src="@drawable/ic_contact_call"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/vContactVippe"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#808080" />

</LinearLayout>